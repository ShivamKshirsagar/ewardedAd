<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="46dp"
        android:backgroundTint="#9C27B0"
        android:text="Tap to Get reward."
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ad_dis" />

    <TextView
        android:id="@+id/money"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="49dp"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Reward in â‚¹ is : 00"
        android:textColor="#4CAF50"
        android:textColorHint="#E91E63"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn" />

    <TextView
        android:id="@+id/ad_dis"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="146dp"
        android:gravity="center_horizontal|center_vertical"
        android:hint="00"
        android:textColor="#4CAF50"
        android:textColorHint="#00BCD4"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rew"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="69dp"
        android:gravity="center_horizontal|center_vertical"
        android:hint="00"
        android:textColor="#4CAF50"
        android:textColorHint="#00BCD4"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="110dp"
        android:layout_height="22dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="124dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Total ad. played"
        android:textColor="#E91E63"
        app:layout_constraintBottom_toTopOf="@+id/ad_dis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="110dp"
        android:layout_height="22dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="69dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Reward Points"
        android:textColor="#E91E63"
        app:layout_constraintBottom_toTopOf="@+id/rew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="410dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_horizontal|center_vertical"
        android:text="Play ad. to get Rewards"
        android:textColor="#FFC107"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>